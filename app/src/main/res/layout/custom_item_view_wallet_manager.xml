<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/linear_layout_wallet_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:weightSum="3">

        <ImageView
            android:id="@+id/image_item_wallet_manager"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:src="@mipmap/ic_another" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/txt_name_item_wallet_manager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|center_horizontal"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="Item"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/txt_date_item_wallet_manager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|center"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="Date" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.6">

            <TextView
                android:id="@+id/txt_value_item_wallet_manager"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="2"
                android:gravity="center|right"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="value"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <ImageView
            android:id="@+id/image_item_edit_wallet_manager"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_edit2"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/image_item_delete_wallet_manager"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_delete2"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_no_data_to_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center"
        android:gravity="center"
        android:text="@string/msg_show_report_month"
        android:visibility="gone" />

</android.support.v7.widget.CardView>